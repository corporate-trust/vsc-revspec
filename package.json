{
	"name": "revspec",
	"displayName": "revspec",
	"description": "Review tool to inspect source code in a structured way.",
	"version": "0.0.1",
	"license": "SEE LICENSE IN LICENSE",
	"icon": "resources/extension.png",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:revspec.setupsession"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "revspec-scope",
					"title": "Revspec Scope",
					"icon": "resources/scope.png"
				}
			]
		},
		"views": {
			"revspec-scope": [
				{
					"id": "revspec-scope",
					"name": "Revspec Scope"
				}
			]
		},
		"commands": [
			{
				"command": "revspec.setupsession",
				"title": "Revspec: Setup review session"
			},
			{
				"command": "revspec.scope.addFile",
				"title": "Revspec: Add file to scope"
			},
			{
				"command": "revspec.scope.removeFile",
				"title": "Remove"
			},
			{
				"command": "revspec.scope.add",
				"title": "Revspec: Add to scope"
			},
			{
				"command": "revspec.findings.create",
				"title": "Create Marker"
			},
			{
				"command": "revspec.findings.new",
				"title": "Revspec: New finding",
				"when": "editorHasSelection"
			},
			{
				"command": "revspec.findings.delete",
				"title": "Revspec: Delete finding with ID ..."
			},
			{
				"command": "revspec.findings.deleteComment",
				"title": "Delete comment"
			},
			{
				"command": "revspec.addAccepted",
				"title": "Revspec: Accept selected code"
			},
			{
				"command": "revspec.report.get",
				"title": "Revspec: Get report"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "revspec.addAccepted",
					"group": "z_commands",
					"when": "editorHasSelection"
				},
				{
					"command": "revspec.findings.new",
					"group": "z_commands",
					"when": "editorHasSelection"
				}
			],
			"explorer/context": [
				{
					"command": "revspec.scope.add"
				}
			],
			"comments/comment/title": [
				{
					"command": "revspec.findings.deleteComment",
					"group": "inline",
					"when": "commentController == revspec-marker && comment == canDelete"
				}
			],
			"comments/commentThread/context": [
				{
					"command": "revspec.findings.create",
					"group": "inline"
				}
			],
			"comments/commentThread/title": [
				{
					"command": "revspec.findings.delete",
					"group": "navigation",
					"when": "commentController == revspec-marker && !commentThreadIsEmpty"
				}
			],
			"view/item/context": [
				{
					"command": "revspec.scope.removeFile",
					"group": "inline"
				}
			]
		},
		"colors": [
			{
				"id": "revspec.scope.seen",
				"description": "",
				"defaults": {
					"dark": "#ffe02ec2",
					"light": "#f8d300c0",
					"highContrast": "#ffff00"
				}
			},
			{
				"id": "revspec.scope.accepted",
				"description": "",
				"defaults": {
					"dark": "#38ff382c",
					"light": "#00d63671",
					"highContrast": "#00ff00a4"
				}
			},
			{
				"id": "revspec.finding",
				"description": "",
				"defaults": {
					"dark": "#993632be",
					"light": "#b30000",
					"highContrast": "#ff0000"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/rimraf": "^2.0.3",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"mkdirp": "^0.5.1",
		"rimraf": "^3.0.0"
	}
}
